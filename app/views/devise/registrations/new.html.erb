<main class="bg-indigo-100 h-screen flex flex-col justify-center items-center gap-10">  
  <section class="flex flex-col items-center gap-1">
    <h1 class="font-bold text-2xl text-blue-600 dark:text-sky-400">Chat App - Ruby on Rails 8</h1>
    <p class="text-blue-600 dark:text-sky-400">This is the chat app with RoR</p>
  </section>

  <section class="flex flex-col items-center bg-white p-6 rounded-lg shadow-md w-96">
    <h2 class="font-bold mb-5">Sign up</h2>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'flex flex-col w-full gap-4') do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      
      <div class="flex flex-col gap-1">
        <%= f.label :email, class: 'font-semibold text-xs' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "border rounded px-3 py-2 w-full text-xs font-medium" %>
      </div>
      
      <div class="flex flex-col gap-1">
        <%= f.label :password, class: 'font-semibold text-xs' %>
        <%= f.password_field :password, autocomplete: "new-password", class: "border rounded px-3 py-2 w-full text-sx font-medium" %>
      </div>
      
      <div class="flex flex-col gap-1">
        <%= f.label :password_confirmation, class: 'font-semibold text-xs' %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "border rounded px-3 py-2 w-full text-xs font-medium" %>
        <% if @minimum_password_length %>
          <em class="text-xs text-gray-500">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      
      <div class="mt-4">
        <%= f.submit "Sign up", class: "bg-blue-600 text-white font-semibold py-2 px-4 rounded w-full hover:bg-blue-700" %>
      </div>
    <% end %>
    
    <%= render "devise/shared/links" %>
  </section>
</main>
